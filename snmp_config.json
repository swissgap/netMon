{
  "description": "SNMP Scanner Configuration - All devices discovered automatically",
  "version": "1.0.0",
  
  "global_settings": {
    "default_community": "public",
    "default_port": 161,
    "default_timeout": 5,
    "snmp_version": "2c",
    "max_walk_results": 100,
    "enable_full_walk": false
  },
  
  "devices": [],
  
  "monitoring_profiles": {
    "router": {
      "metrics": [
        "cpu_usage",
        "memory_usage",
        "interface_bandwidth",
        "uptime"
      ],
      "poll_interval": 30,
      "alert_thresholds": {
        "cpu_usage": 80,
        "memory_usage": 85,
        "interface_bandwidth_percent": 90
      }
    },
    "switch": {
      "metrics": [
        "cpu_usage",
        "memory_usage",
        "interface_status"
      ],
      "poll_interval": 60
    },
    "wlan_ap": {
      "metrics": [
        "client_count",
        "channel_utilization",
        "cpu_usage",
        "memory_usage"
      ],
      "poll_interval": 30,
      "alert_thresholds": {
        "channel_utilization_2ghz": 70,
        "channel_utilization_5ghz": 70,
        "client_count": 50
      }
    }
  },
  
  "special_interfaces": {
    "description": "Special interfaces to monitor closely - discovered automatically",
    "uplink_interfaces": []
  },
  
  "integration": {
    "export_to_network_data": true,
    "update_dashboard": true,
    "enable_api_endpoint": true
  },
  
  "security": {
    "snmpv3_enabled": false,
    "snmpv3_users": []
  },
  
  "advanced": {
    "enable_bandwidth_calculation": true,
    "bandwidth_calculation_interval": 60,
    "store_historical_data": true,
    "historical_data_retention_days": 7,
    "enable_optical_monitoring": false,
    "enable_power_monitoring": false
  }
}
